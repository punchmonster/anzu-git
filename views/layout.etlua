<!DOCTYPE HTML>
<html id="top">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <!-- style sheets -->
    <link rel="stylesheet" type="text/css" href="<%- build_url() %>/static/css/normalize.css">
    <% if layout == "dark" then %>
    <link rel="stylesheet" type="text/css" href="<%- build_url() %>/static/css/style.css">
    <% else %>
    <link rel="stylesheet" type="text/css" href="<%- build_url() %>/static/css/style-light.css">
    <% end %>
    <link rel="stylesheet" type="text/css" href="<%- build_url() %>/static/css/typicons.min.css">

    <!-- page title -->
    <title><%= page_title %></title>
  </head>
  <body>
    <% if header_vis ~= false then %>
      <% render("views.header") %>
    <% end %>

    <% if errors then %>
      <% render("views.error") %>
    <% end %>

    <% content_for("inner") %>

    <script>
      <% render("views.scripts") %>
    </script>

  </body>
</html>
